---
import { formatDate } from '../utils';
import type { CollectionEntry } from "astro:content";
import { Image } from 'astro:assets';

type Props = {
    article: CollectionEntry<'articles'>;
}

const { article } = Astro.props;
---

<a href={'/publication/' + article.slug} class="block group">
    <div class="bg-white rounded-lg overflow-hidden shadow-lg scale-in transform transition-all duration-300 ease-in-out group-hover:scale-105 group-hover:shadow-2xl">
        <Image
            src={article.data.image}
            alt={article.data.title}
            width={600}
            height={600 / 1.5}
            class="w-full h-48 object-cover transition-opacity duration-300 ease-in-out group-hover:opacity-75"
        />
        <div class="p-6">
            <h2 class="text-2xl text-gray-900 font-semibold mb-2 transition-colors duration-300 ease-in-out">
                {article.data.title}
            </h2>
            <p class="text-gray-600 text-sm mb-4">{formatDate(article.data.pubDate)}</p>
        </div>
    </div>
</a>
