<style lang="scss">
  .nav-overlay {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 8;
    backdrop-filter: blur(10px);
    background-color: rgba(35, 0, 7, 0.521);
    pointer-events: initial;
    opacity: 0;
    pointer-events: none;
    transition: 0.2s;

    &.show {
      opacity: 1;
      pointer-events: initial;
    }
  }

  .nav-bar {
    width: 100%;
    height: 100px;
    display: block;
    backdrop-filter: blur(5px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    background-color: var(--clr-black);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 20;

    .nav-container {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    // navigation logo
    .logo {
      width: 150px;
      transition: 0.2s;

      &:hover {
        transform: scale(0.95);
      }
    }
    // End of logo

    // ============= Nav Button  =================
    .nav-btn {
      z-index: 21;
      cursor: pointer;
      transition: 0.3s;

      .lines {
        width: 3rem;
        height: 0.2rem;
        background-color: var(--clr-white);
        transition: 0.4s;
        border-radius: 2px;

        &:not(:last-child) {
          margin-bottom: 0.5rem;
        }
      }
      &.close {
        transform: rotate(180deg);

        .lines {
          &:nth-child(1) {
            transform: rotate(-45deg) translate(-8px, 6px);
          }
          &:nth-child(2) {
            opacity: 0;
          }
          &:nth-child(3) {
            transform: rotate(45deg) translate(-7px, -7px);
          }
        }
      }
    }
  }






  // =========================== media Queriies ==========================


  // Desktop Navigation done
  @media screen and (min-width: 768px) {
    .nav-overlay {
        // display: none;
      }
    .nav-bar {
      padding-block: 1rem;
      //padding-inline: 2rem;
      position: relative;

      .nav-btn {
        display: none;
      }

      // Nav-menu
      .nav-list {
        list-style: none;
        display: flex;
        height: 100%;
        align-items: center;

        li a {
          white-space: nowrap;
        }

        // ============  menu ===========
        & .sub-menu {
          position: absolute;
          top: 60px;
          left: 0;
          line-height: 40px;
          // background: var(--clr-white);
          background-color: rgba(23, 20, 4, 0.462745098);
          box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
          border-radius: 0 0 4px 4px;
          display: none;
          z-index: 2;
          padding-top: 2rem;
          display: none;

          // Sub sub menu
          .more-sub-menu {
            position: absolute;
            top: 0;
            left: 100%;
            border-radius: 0 4px 4px 4px;
            z-index: 1;
            display: none;
            padding-top: 0rem;
          }
          .more:hover .more-sub-menu {
            display: block;
          }
        }
        li:hover .products-sub-menu,
        li:hover .services-sub-menu {
          display: block;
        }

        .nav-item .sub-menu li {
          padding: 0 22px;
          border-bottom: 1px solid rgba(5, 0, 47, 0.1);

          &:hover {
            backdrop-filter: blur(70px);
          }
        }

        .nav-item {
          position: relative;

          .dropdown li {
            padding: 0 22px;
            border-bottom: 1px solid rgba(5, 0, 47, 0.1);
            background-color: rgba(5, 5, 5, 0.763);
            color: var(--clr-white);

            &:hover {
              color: #edce22;
              backdrop-filter: blur(70px);
              background-color: rgba(5, 5, 5, 0.863)
            }
          }
        }

        // Navigation Main Link
        .nav-link {
          display: flex;
          padding: 0.9rem 0.7rem;
          text-transform: uppercase;
          font-size: 0.8rem;
          outline: none;
          background-color: transparent;
          border: none;
          cursor: pointer;
          font-family: inherit;
          box-sizing: inherit;
          margin-left: 0.5em;
          line-height: 2;
          font-family: inherit;
          font-weight: bold;
          transition: 0.2s ease-in-out;
          white-space: nowrap;
          color: var(--clr-white);

          .fa {
            line-height: 1;
          }

          &:hover svg {
            transform: translateY(5px);
          }

          &:hover {
            transform: scale(1.03) translateY(2px);
            color: #f7df40;
          }
        }

        li[data-dropdown]:hover .dropdown-menu {
          display: block;
          opacity: 1;
          pointer-events: auto;
        }

        // =============== Drop down ===========
        .dropdown {
          // position: relative;
          // width: 100%;

          &.active > .dropdown-menu {
            opacity: 1;
            // transform: translateY(0);
            pointer-events: auto;
          }

          &-menu {
            position: absolute;
            color: #c0d9e8;
            left: 0;
            opacity: 0;
            transition: 0.2s ease-in-out;
            pointer-events: none;
            top: 50px;
            line-height: 40px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
            border-radius: 0 0 4px 4px;
            // display: none;
            z-index: 2;

            .more-sub-menu {
              position: absolute;
              top: 0;
              left: 100%;
              border-radius: 0 4px 4px 4px;
              z-index: 1;
              display: none;
              padding-top: 0rem;
            }
            .more:hover .more-sub-menu {
              display: block;
              background-color: rgba(4, 8, 23, 0.763);
              color: #e2e9ee;
            }
          }
        }
      }
    }
  }
//   End of Desktop Navigation




  // =================== Smart Phone =-====================
  @media screen and (max-width: 767px) {
    .nav-bar {
      z-index: 100 !important;

      .nav-list {
        width: 100%;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 9;
        display: flex;
        padding-top: 60px;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: 0.4s;
        opacity: 0;
        scale: 0;
        pointer-events: none;

        &.show {
          opacity: 1;
          transition-delay: 0.2s;
          scale: 1;
          pointer-events: initial;
        }
      }

      .nav-item {
        &:not(:last-child) {
          margin-bottom: 2rem;
        }
      }

      .nav-link {
        display: inline-block;
        color: var(--clr-white);
        position: relative;
        z-index: 1;
        transition: 0.4s;
        padding: 1rem 3rem;
        overflow: hidden;
        border-bottom: 1px solid var(--clr-white);

        &:hover, &:focus {
          color: var(--clr-black);
          transform: scale(0.9);
        }

        &:hover::after, &:focus::after {
          top: 0;
        }

        &::after {
          content: "";
          background-color: var(--clr-white);
          width: 100%;
          height: 100%;
          position: absolute;
          top: 100%;
          left: 0;
          z-index: -1;
          transition: 0.4s;
        }
      }



      // =============== Drop down ===========
      .dropdown {
            position: relative;
            text-align: center;
            
            &.active > .dropdown-menu {
                opacity: 1;
                transform: translateY(0);
                pointer-events: auto;
                display: block;
            }

            &-menu {
                display: none;
                width: 100%;
                transform: translateY(-5px);
                padding: 1rem 3rem;
                border-radius: 1rem;
                transition: .4s ease-in-out;
                pointer-events: none;
                
                ul li {
                    list-style: none;

                    &:not(:last-child) {
                        margin-bottom: .5rem;
                    }

                    a {
                        display: inline-block;
                        transition: .3s;
                        color: var(--clr-white);
                        border-bottom: 1px solid var(--clr-white);
                        padding-block: .2rem;

                        &:hover, 
                        &:focus {
                            transform: scale(1.1);
                            color: var(--clr-yellow);
                        }
                    }

                }

                .more:hover .more-sub-menu {
                    display: block;;
                }

                .more-sub-menu {
                    padding-left: 2rem;
                    padding-top: 1rem;
                    display: none;
                }

            }
        }
    }
  }
</style>
