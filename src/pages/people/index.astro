---
import { Image } from "astro:assets";
import MainLayout from "../../layouts/MainLayout.astro";
import TeamCard from "../../components/TeamCard.astro";

import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const allTeams: CollectionEntry<"teams">[] = await getCollection("teams");
---

<MainLayout>
  <!-- This is hero section of the People page -->
  <section class="section-hero pt-20 md:pt-8">
    <div class="container wrapper">
      <div class="h-full flex flex-col text-center items-center justify-center">
        <h1
          class="my-5 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl"
        >
          Meet the Team
        </h1>
        <p
          class="mb-8 text-lg font-normal text-gray-200 lg:text-xl sm:px-16 xl:px-48"
        >
        IPG is led by a team of distinguished fellows from academia and various professional fields, each contributing expertise in governance, policy analysis, economics, law, and public sector development.
        </p>
      </div>
    </div>
  </section>

  <section class="py-36">
    <div class="container wrapper">
      <h2 class="mb-16 text-4xl tracking-tight font-extrabold text-gray-900 text-center">
        Leadership Profiles
      </h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
          allTeams.map((team) => (
            <TeamCard team={team} />
          ))
        }
      </div>
    </div>
  </section>
</MainLayout>
<!-- End of hero section of the People page -->

<style>
  /* Section hero */
  .section-hero {
    width: 100%;
    height: 50vh;
    background-color: var(--clr-black);
    background-size: cover;
    background-position: top;
  }
  /* End of section hero */

  .people {
    text-align: center;
    width: 100%;
    transition: 0.3s;

    &:hover {
      transform: scale(0.95);
    }
    &:hover > .people-social {
      transform: scale(1.1);

      a {
        color: var(--clr-white);
        background-color: var(--clr-gray-light);
      }
    }

    .people-text {
      margin: 1rem 0;

      h3 {
        font-weight: bold;
        font-size: 1.5rem;
      }
      p {
        color: #909090;
      }
    }
    /* people social icons */
    .people-social {
      display: flex;
      align-items: center;
      justify-content: center;
      transition: 0.3s;

      li {
        &:not(:last-child) {
          margin-right: 1rem;
        }
      }
      .people-link {
        display: flex;
        width: 3rem;
        height: 3rem;
        border-radius: 0.5rem;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--clr-gray-light);
        color: var(--clr-gray-light);
        background-color: var(--clr-white);
        transition: 0.3s;

      }
    }
  }
</style>
