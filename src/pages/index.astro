  <style lang="scss">
    .coming-soon {
      width: 100%;
      height: calc(100vh - 3.5rem);
      background-color: var(--clr-black);
      color: var(--clr-white);
      position: relative;
      z-index: 1;
      overflow: hidden;

      .coming-container {
        width: 100%;
        height: 100%;
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
      }

      .yellow,
      .green {
        width: 30vw;
        height: 30vw;
        border-radius: 50%;
        position: absolute;
        z-index: -1;
        filter: blur(5.5rem);
        opacity: 0.5;
      }
      .yellow {
        background-color: var(--clr-yellow);
        right: -10vw;
        top: 0;
      }
      .green {
        background-color: var(--clr-green);
        bottom: 0;
        left: -10vw;
      }
    }

    // Section hero
    .section-hero {
      width: 100%;
      height: 95vh;
      background-image: url(../assets/hero-bg.jpg);
      background-size: cover;
      background-position: top;
	    background-attachment: fixed;
    }
    // End of section hero



    //   section home about
    .section-about {
      padding-block: 5rem;
      border-bottom: 1px solid lightgray;
    }

    // Section Impact
    .section-impact {
      padding-top: 2rem;
	  padding-bottom: 4rem;

      .impact {
        border: 1px solid lightgray;
        padding: 1rem;
        border-radius: 1rem;
        transition: 0.3s;
        box-shadow: 0 0.3px 5px rgba(0, 0, 0, 0.125);

        &:hover {
          transform: scale(0.95);
        }

        &:hover .impact-icon {
          transform: scale(1.2);
          color: var(--clr-yellow-light);
          background-color: var(--clr-yellow);
        }

        .impact-icon {
          width: 3rem;
          height: 3rem;
          background-color: var(--clr-yellow-light);
          color: var(--clr-yellow);
          transition: 0.3s;
        }
      }
    }

    // section testimonial
    .section-testimonial {
      padding-bottom: 7rem;
      padding-top: 9rem;
      background-image: url(../assets/test-bg.jpg);
      background-size: cover;
      background-position: center;

      .testimonial {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
        background-color: #ffd3d0;
        padding: 1.5rem 2rem;
        padding-bottom: 3rem;
        border-radius: 2rem;

        .testimonial-img {
          display: inline-block;
          margin-top: -4rem;
          margin-bottom: 1.5rem;
        }
        .testimonial-text {
          h3 {
            font-weight: bold;
            margin-top: 2rem;
          }
        }
      }
    }

    .section-partners {
          padding: 7rem 0 5rem;
          border-bottom: 1px solid lightgray;
    
            @keyframes slides {
            from {
              transform: translateX(0);
            }
            to {
              transform: translateX(-70%);
            }
          }

          .logos {
            overflow: hidden;
            padding: 30px 0;
            position: relative;
            white-space: nowrap;
          }

          .logo_track {
            display: flex;
            width: 200%;
            animation: slides 10s linear infinite;
          }

          .logo_items {
            display: flex;
            margin: 0 2rem;
            gap: 2rem;
            flex-shrink: 0;
          }

          .logos:hover .logo_track {
            animation-play-state: paused;
          }

          .logo_items img {
            width: 150px;
            height: 150px;
            object-fit: contain;
          }

  }

  </style>
</MainLayout>
