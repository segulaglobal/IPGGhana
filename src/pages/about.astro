---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import aboutImage from "../assets/about-img.jpg";
import BlogSection from "../components/BlogSection.astro";

---

<MainLayout>


    <!-- This is hero section of the about page -->
  <section class="section-hero">
    <div class="container wrapper">
      <div
        class="h-full flex flex-col text-center items-center justify-center"
      >
        <h1
          class="my-5 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl"
        >
          About us
        </h1>
        <p
          class="mb-8 text-lg font-normal text-gray-200 lg:text-xl sm:px-16 xl:px-48"
        >
          Strengthening the African voice on global challenges.
        </p>
        </div>
      </div>
    </div>
  </section>
  <!-- End of hero section of the about page -->



      <!-- Our Story section -->
  <section class="section-about border-b border-gray-200">
	<div class="container wrapper">
		<div class="gap-20 items-center py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 my-5 md:grid md:grid-cols-2 sm:py-16 lg:px-6">
			<div class="mt-4 md:mt-0">
				<h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900">Our Story</h2>
				<p class="mb-6 font-light text-gray-500 md:text-lg ">About IEA Ghana
